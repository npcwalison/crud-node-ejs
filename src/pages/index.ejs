<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>STAPP - Note to Day</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <nav class="menu-container">
    <div class="center menu">
      <p><strong>STAPP</strong><br/>DASHBOARDS</p>
    </div>
  </nav><!--==>menu-container<==-->
  <div class="popup-container">
    <button id="close-popup">X</button>
    <form action="/data" method="post">
      <input name="datanome" type="text" placeholder="Nome completo">
      <input name="datamatricula" maxlength="10" type="text" placeholder="Maticula">
      <button id="btnEnviar">Salvar</button>
    </form>
  </div><!--==>popup-container<==-->
  <div class="table-container">
    <table>
      <thead>
        <tr class="table-title">
          <th colspan="2">Controle de Acesso</th>
          <th colspan="2"><button id="open-popup">Adicionar</button></th>
        </tr>
        <tr class="table-info">
          <th width="300px">Nome</th>
          <th width="150px">Maticula</th>
          <th width="80px">Editar</th>
          <th width="80px">Deletar</th>
        </tr>
      </thead>
      <tbody>
        <% for(i=0; i<databases.length;i++){ %>
          <tr>
            <td width="300px"><%= databases[i].nome %> </td>
            <td width="150px"><%= databases[i].matricula %></td>
            <td width="80px">Edit</td>
            <td width="80px">Delete</td>
          </tr>
        <% } %>  
      </tbody>
    </table>
  </div><!--==>table-container<==-->
  <script src="js/script.js"></script>
</body>
</html>